<!--===========================================================================
                          HERO-SCTION                                       -->
<div class="container-fluid d-relative">
    <!-- IMG -->
    <section data-aos="fade-right" id="home" class="jumbotron jumbotron-fluid hero-bg"></section>

    <!-- TEXT & BTN -->
    <div class="container hero-section">
        <% if(name) { %>
