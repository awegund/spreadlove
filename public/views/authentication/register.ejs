                                    HEADER                                             -->
<%- include('../includes/header.ejs') %>


<!--======================================================================================
                                    MAIN WINDOW AREA                                   -->
<main>    
  <div class="container mt-5 pt-5">
      <h1 class="border-line">Register for SpreadLove:</h1>

        <form action="/authentication/registerUser" method="POST">
            <div class="row">
                <!-- LINKE SPALTE -->
                <div class="col">
                
                    <div class="form-group">
                        <label for="gender">Geschlecht:</label>
                        <select id="gender" name="gender" class="form-control">
                            <option value="female">female</option>
                            <option value="male">male</option>
                            <option value="divers">divers</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" id="name" name="name" value="<%= name %>" class="form-control" placeholder="* please enter your name">
                    </div>
                    <div class="form-group">
                        <label for="email">E-Mail:</label>
                        <input type="email" id="email" name="email" value="<%= email %>" class="form-control" placeholder="* please enter your email address">
                    </div>
                    <div class="form-group mb-4">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="* please enter password">
                        <small class="form-text text-muted">Bitte w√§hle ein sicheres Passwort!</small>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-success" type="submit" name="commit" value="Register">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">  <!-- CSRF TOKEN -->
                    </div>
                </div> <!--end col-->
              

              <!-- RECHTE SPALTE -->
                <div class="col">
                    <div class="form-group">
                        <label for="textarea">Was willst Du mir sagen?</label>
                        <textarea name="textarea" class="form-control" id="textarea" rows="10"></textarea>
                    </div>
              </div> <!--end col-->
          </div> <!--end row-->
      </form> <!--end input form-->

  </div> <!-- CONTAINER END -->
</main>


