  <div class="container mt-5 pt-5">
        <h1>Admin Desktop:</h1>
        <!-- Row -->
        <div class="row">
            <!-- START COL TABLES -->
            <div class="card-columns">

                <!-- TABLE DEFINITIONs -->
                <div class="card bg-light">
                    <form action="/authentication/getDBAdminView" method="GET">
                        <div class="card-img-top">
                            <div class="card-body">
                                <div class="card-title text-dark">Table denfitions</div>
