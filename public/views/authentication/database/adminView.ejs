                <div class="card bg-light">
                    <form action="/authentication/displayAllUsers" method="GET">
                        <div class="card-img-top">
                            <div class="card-body">
                                <div class="card-title text-dark">User anzeigen</div>
                                <input class="btn btn-round" type="submit" value="Alle registrierten User anzeigen">
                            </div>
                        </div>
                    </form>
                </div>
                <!-- ENDE RASPBERRY -->

            </div>
            <!-- ENDE CARD-COLUMNS -->
        </div> 
        <!-- ENDE ROW -->
    </div>
    <!-- CONTAINER END -->
</section>




























